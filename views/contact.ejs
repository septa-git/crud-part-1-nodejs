<h1>Welcome to the <%= title %></h1>
<a href="/contact/add" class="btn btn-primary mb-2">Tambah data contact</a>
<% if(msg.length !== 0){ %>
	<div class="alert alert-success" role="alert">
		<%= msg %>
	</div>
<% } %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Aksi</th>
    </tr>
  </thead>
  <tbody>
	<% if(contacts.length === 0){ %>
	    <tr>
	       <td colspan="4">
		<div class="alert alert-danger" role="alert">
			Data Contact masih kosong
		</div>
	       </td>
	    </tr>
	<% }else{ %>
	<% contacts.forEach((value,i)=>{ i++ %>
	    <tr>
	      <th scope="row"><%= i++ %></th>
	      <td><%= value.name %></td>
	      <td><%= value.phone %></td>
	      <td><%= value.email %></td>
	      <td>
		<a href="/contact/<%= value.name %>" class="btn btn-success badge rounded-pill">detailt</a>
	      </td>
	    </tr>
	<% })}; %>
  </tbody>
</table>
